<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@drawable/border_gray_f3f5f8_fill_10"
        tools:context=".presentation.reminderupdate.ReminderAlarmPickerDialog">


        <NumberPicker
            android:id="@+id/number_picker_dialog_alarm_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:theme="@style/PickerTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_dialog_alarm_picker_horizontal"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/gray_cccccc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number_picker_dialog_alarm_picker" />

        <TextView
            android:id="@+id/tv_dialog_alarm_picker_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingVertical="16dp"
            android:text="@string/dialog_picker_cancel"
            android:textColor="@color/gray_a5a5a5"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_dialog_alarm_picker_horizontal"
            app:layout_constraintWidth_percent="0.5" />

        <TextView
            android:id="@+id/tv_dialog_alarm_picker_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingVertical="16dp"
            android:text="@string/dialog_picker_confirm"
            android:textColor="@color/green_15bd6f"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_dialog_alarm_picker_horizontal"
            app:layout_constraintWidth_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>